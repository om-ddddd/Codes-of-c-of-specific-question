#include <bits/stdc++.h>
using namespace std;
int main(){
    // srand(time(0));
    ios_base::sync_with_stdio(0);
    cin.tie(0); cout.tie(0);
    int t;
    t=rand()%15+3;
    cout<<t<<endl;
    // cin>>t;
    while(t--){
        int n;
        n=rand()%15+1;
        cout<<n<<" "<<endl;
        // cin>>n;
        vector<int> a(n);
        vector<int> b(n+1);
        for(int &x:a ){
            // cin>>x;
            x=rand()%3+1;
        }
        for(int &x:b){
             x=rand()%5+1;
            // cin>>x
        }
        for(int &x:a ){
           cout<<x<<" ";
        }
        cout<<endl;
        for(int &x:b){
            cout<<x<<" ";
        }
        cout<<endl;
        int min=abs(b[n]-a[0]);
        long long ans=0;
        for(int i=0;i<n;i++){
            ans+=abs(a[i]-b[i]);
            while(a[i]!=b[i]){
                if(b[i]>a[i])
                a[i]++;
                if(a[i]>b[i])
                a[i]--;
                if(abs(b[n]-a[i])<min)
                min=abs(b[n]-a[i]);
            }
            if(abs(b[n]-a[i])<min)
                min=abs(b[n]-a[i]);
            cout<<ans<<" ";
        }
        bool flag=false; 
        for(int i=0;i<n;i++){
            if((b[n]>=a[i]&&b[n]<=b[i])||(b[n]<=a[i]&&b[n]>=b[i]))
            flag=true;
            break;
        }
        cout<<"flag: "<<flag<<" ";
            cout<<"min: "<<min<<" ";
        if(flag==false){
            ans+=min;
            cout<<ans<<" ";
        }
        ans+=1;
        cout<<ans<<'\n';
 
    }
}
